<p id="notice"><%= notice %></p>


<div class="row">

  <div class="col-xs-4">
    <%= image_tag("#{@product.id}.jpg", size: '300x300') %>
  </div>

  <div class="col-xs-8">
      <h2><%= @product.title %></h2><br/>

    <p>
      <h4>Description</h4>
      <%= @product.description %><br/>
    </p>
    <br/>
    <p>
      <h4>Price: <small><%= @product.price %></small></h4>
    </p>

    <% if current_user %>

        <!--<%= render partial: 'cart_items/form', locals: {product: @product, cart: @cart} %>-->

        <%= button_to 'Add to Cart', cart_items_path(product_id: @product, cart_id: @cart), method: :post %>


    <% else %>
        <%= link_to 'Login or Sign Up to Purchase', session_login_path %>
    <% end %>
  </div>

</div>




<br/>
<br/>

<% if current_user  %>
    <% if current_user.admin  %>
        <%= link_to 'Edit', edit_product_path(@product) %> |
    <% end  %>
<% end  %>


<%= link_to 'Back', products_path %>
